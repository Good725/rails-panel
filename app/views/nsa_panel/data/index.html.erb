<h1><%= @user.name %>'s <%= @association.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.id %></td>
        <td><%= link_to 'I found this suspicious', user_datum_path(@user, record, name: @association.name), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
